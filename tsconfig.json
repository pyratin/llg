{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "paths": {
      "server/*": [
        "./source/server/*"
      ],
      "client/*": [
        "./source/client/*"
      ]
    }
  },
  "exclude": [
    "./target/"
  ]
}
